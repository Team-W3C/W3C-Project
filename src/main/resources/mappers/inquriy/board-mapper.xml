    <select id="selectBoardList" resultMap="boardResultMap" parameterType="map">
        SELECT
        BOARD_ID,
        BOARD_TYPE,
        BOARD_TITLE,
        BOARD_SECRET_TYPE,
        BOARD_STATUS,
        DEPARTMENT_NAME,
        QUESTION_CONTENT,
        TO_CHAR(QUESTION_DATE, 'YYYY-MM-DD') AS QUESTION_DATE,
        PATIENT_NAME
        FROM V_BOARD_QA
        <where>
            <if test="keyword != null and keyword != ''">
                AND BOARD_TITLE LIKE '%' || #{keyword} || '%'
            </if>
            <if test="category != null and category != ''">
                AND BOARD_TYPE = #{category}
            </if>
            <if test="status != null and status != ''">
                AND BOARD_STATUS = #{status}
            </if>
        </where>
        ORDER BY BOARD_ID DESC
    </select>
<!--    <select id="selectBoardListCount" resultType="_int">-->
<!--        SELECT COUNT(*)-->
<!--        FROM V_BOARD_QA-->
<!--    </select>-->

    <select id="selectBoardListCount" resultType="_int" parameterType="map">
        SELECT COUNT(*)
        FROM V_BOARD_QA
        <where>
            <if test="keyword != null and keyword != ''">
                AND BOARD_TITLE LIKE '%' || #{keyword} || '%'
            </if>
            <if test="category != null and category != ''">
                AND BOARD_TYPE = #{category}
            </if>
            <if test="status != null and status != ''">
                AND BOARD_STATUS = #{status}
            </if>
        </where>
    </select>
    <select id="getBoardById" parameterType="_int" resultMap="boardResultMap">
        SELECT
        BOARD_ID,
        BOARD_TYPE,
        BOARD_TITLE,
        BOARD_SECRET_TYPE,
        QUESTION_CONTENT,
        TO_CHAR(QUESTION_DATE, 'YYYY-MM-DD') AS QUESTION_DATE,
        PATIENT_NAME,
        BOARD_STATUS,
        DEPARTMENT_NAME,
        ANSWER_NO,
        ANSWER_CONTENT,
        STAFF_NAME,
        TO_CHAR(ANSWER_DATE, 'YYYY-MM-DD') AS ANSWER_DATE
        FROM V_BOARD_QA
        WHERE BOARD_ID = #{boardId}
    </select>

    <insert id="insertBoard" parameterType="com.w3c.spring.model.vo.inquiry.BoardInsert">
        INSERT INTO BOARD (
        BOARD_ID,
        BOARD_TYPE,
        BOARD_TITLE,
        BOARD_CONTENT,
        BOARD_DATE,
        BOARD_PRIORITY,
        BOARD_STATUS,
        MEMBER_NO,
        DEPARTMENT_NO,
        BOARD_SECRET_TYPE,
        BOARD_DELETE_TYPE
        )
        VALUES (
        BOARD_SEQ.NEXTVAL,
        #{boardType},
        #{boardTitle},
        #{boardContent},
        SYSDATE,
        1,
        '대기중',
        #{memberNo},
        6,
        #{boardSecretType},
        'F'
        )
    </insert>

    <insert id="insertAnswer" parameterType="com.w3c.spring.model.vo.inquiry.Answer">
        INSERT INTO ANSWER (
        ANSWER_NO,
        BOARD_ID,
        STAFF_NO,
        ANSWER_CONTENT,
        ANSWER_DATE
        )
        VALUES (
        ANSWER_SEQ.NEXTVAL,
        #{boardId},
        #{staffNo},
        #{answerContent},
        SYSDATE
        )
    </insert>

    <update id="updateBoardStatus">
        UPDATE BOARD
        SET BOARD_STATUS = #{boardStatus}
        WHERE BOARD_ID = #{boardId}
    </update>

    <select id="selectBoardCountAll" resultType="_int">
        SELECT COUNT(*)
        FROM V_BOARD_QA
    </select>

    <select id="selectBoardCountByStatus" resultType="_int">
        SELECT COUNT(*)
        FROM V_BOARD_QA
        WHERE BOARD_STATUS = #{status}
    </select>

    <select id="selectBoardCountToday" resultType="_int">
        SELECT COUNT(*)
        FROM V_BOARD_QA
        WHERE TRUNC(QUESTION_DATE) = TRUNC(SYSDATE)
    </select>

    <select id="getBoardMemberId" parameterType="_int" resultType="_int">
        SELECT
        MEMBER_NO
        FROM BOARD
        WHERE BOARD_ID = #{boardId}
    </select>


</mapper>